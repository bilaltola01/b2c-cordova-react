<?xml version='1.0' encoding='utf-8'?>
<widget id="com.partnersuperconnect5media.onemenu" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OneMenu</name>
    <description>
        One Menu - The world on your plate
    </description>
    <author email="dev@one-menu.com" href="http://one-menu.com">
        One Menu Development team
    </author>
    <content src="https://app.one-menu.com" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    <access launch-external="no" origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />

        <splash src="res/screen/ios/OneMenu~iphone.png" width="320" height="480"/>
        <splash src="res/screen/ios/OneMenu@2x~iphone.png" width="640" height="960"/>
        <splash src="res/screen/ios/OneMenu-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/screen/ios/OneMenu-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/OneMenu-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/screen/ios/OneMenu-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/OneMenu-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/screen/ios/OneMenu-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/OneMenu-736h.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/OneMenu-Landscape-736h.png" width="2208" height="1242"/>

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/Icon-App-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/Icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="res/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/ios/Icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/ios/Icon-App-40x40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="res/ios/Icon-App-57x57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/Icon-App-72x72@1x.png" width="72" height="72" />
        <icon src="res/ios/Icon-App-72x72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="res/ios/Icon-App-29x29@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/Icon-Small-50x50@1x.png" width="50" height="50" />
        <icon src="res/ios/Icon-Small-50x50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
    </platform>

    <engine name="ios" spec="4.5.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
    <plugin name="cordova-plugin-dialogs" spec="1.3.4" />
    <plugin name="cordova-plugin-network-information" spec="1.3.4" />
    <plugin name="cordova-plugin-geolocation" spec="3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="4.1.0" />
</widget>
